#!/bin/bash
#
#
# This script is a collection of functions to deal with csv files
#
#

filename=
separator=,
column=

while [ "$1" != "" ]; do
    case $1 in
        -f | --file )           shift
                                filename=$1
                                ;;
        -s | --separator )      shift
                                separator=$1
                                ;;
        -c | --column )         shift
                                column=$1
                                ;;
    esac
    shift
done

if [ $filename == "" ]
then
    echo "ERROR: Write a filename"
fi

if [ $column == "" ]
then
    echo "ERROR: No column declared"
fi


